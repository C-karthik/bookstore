
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        body {
            overflow: hidden;
        }
    </style>
    <style>
        body {
            background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://unsplash.it/1200/800/?random');
        }
    </style>
</head>
<body>
    <div class="container">
        <marquee behavior="scroll" direction="right" style="color:orange">Welcome to Mindtree Campus_minds</marquee>
        <br />
        <br />
        <marquee behavior="scroll" direction="left" style="color:white">Happiness can be found even in the darkest times if one only remembers to turn on the light.</marquee>
        <br />
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ul>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <h5 style="color:white">Book Store Welcome</h5>
                <div class="item active">
                    <img src="~/Pictures/original.gif" alt="Los Angeles" style="width:100%;" />
                </div>
                <div class="item ">
                    <img src="~/Pictures/Books-in-animated-gifs-books-dancing-waltz.gif" alt="Los Angeles" style="width:100%;" />
                </div>
                <div class="item ">
                    <img src="~/Pictures/tumblr_nisdilCaCq1qakhfho3_500.gif" alt="Los Angeles" style="width:100%;" />
                </div>
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</body>
</html>


