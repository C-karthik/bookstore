
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/StyleSheet/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <form action="LogHere" method="post">
                <h3 style="color:brown" class="col-md-2">@TempData["message"]</h3>
                <div class="row">
                    <div class="input-field col s6">
                        <label for="username">username</label><br />
                        <input name="username" type="text" class="validate" required>

                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label for="password">Password</label><br />
                        <input name="password" type="password" class="validate" minlength="4" required>
                    </div>
                </div>
                <input type="submit" value="submit">
            </form>
        </div>

    </div>

</body>
</html>